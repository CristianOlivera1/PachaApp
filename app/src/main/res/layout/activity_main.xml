<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroun_pacha"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="78dp"
        android:gravity="end"
        android:orientation="horizontal"
        android:paddingRight="30dp"
        android:paddingTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="1dp">

        <!-- Botón: Agregar -->
        <ImageButton
            android:id="@+id/buttonBuscar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="@android:color/transparent"
            android:contentDescription="Buscar ciudad"
            android:scaleType="centerInside"
            android:src="@drawable/iconobuscar" />

        <ImageButton
            android:id="@+id/buttonAgregar"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:background="@android:color/transparent"
            android:contentDescription="Agregar actividad"
            android:onClick="listarActividades"
            android:scaleType="centerInside"
            android:src="@drawable/iconomas" />

        <ImageButton
            android:id="@+id/buttonEngranaje"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginStart="12dp"
            android:background="@android:color/transparent"
            android:contentDescription="Configuración"
            android:onClick="configuracion"
            android:scaleType="centerInside"
            android:src="@drawable/iconoengranaje" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>